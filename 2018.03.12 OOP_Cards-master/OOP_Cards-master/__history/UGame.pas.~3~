implementation

var
  deck: tpack;
  player1, player2: thand;
  i: integer;

procedure init;
begin
  deck := tpack.create(False);
  deck.shuffle;
  player1 := thand.create;
  player2 := thand.create;
  for i := 0 to 25 do
    player1.AddToHand(deck.draw);
  for i := 0 to 25 do
    player2.AddToHand(deck.draw);
end;


